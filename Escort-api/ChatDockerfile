FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER root
WORKDIR /app
EXPOSE 8087

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["/src/services/chat/Escort.Chat.API/Escort.Chat.API.csproj", "Escort.Chat.API/"]

COPY /src/services/chat/Escort.Chat.API/. Escort.Chat.API/

RUN dotnet restore "Escort.Chat.API/Escort.Chat.API.csproj"
WORKDIR "/src/Escort.Chat.API"
RUN dotnet build "Escort.Chat.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "Escort.Chat.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Escort.Chat.API.dll"]
CMD ["dotnet", "Escort.Chat.API.dll"]

