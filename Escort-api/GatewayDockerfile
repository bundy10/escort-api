# Use the official .NET SDK image for building
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy the project file and restore dependencies
COPY ["src/gateways/Escort.Gateway/Escort.Gateway.csproj", "src/gateways/Escort.Gateway/"]
RUN dotnet restore "src/gateways/Escort.Gateway/Escort.Gateway.csproj"

# Copy the rest of the source code
COPY . .
WORKDIR "/src/src/gateways/Escort.Gateway"

# Build the application
RUN dotnet build "Escort.Gateway.csproj" -c Release -o /app/build

# Publish the application
FROM build AS publish
RUN dotnet publish "Escort.Gateway.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Use the runtime image
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
EXPOSE 8080
EXPOSE 80

# Copy the published application
COPY --from=publish /app/publish .

# Set environment variables
ENV ASPNETCORE_URLS=http://+:8080

ENTRYPOINT ["dotnet", "Escort.Gateway.dll"]

