FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER root
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

COPY /src /src

RUN apt-get update && apt-get install -y ca-certificates && update-ca-certificates

WORKDIR "/src/services/booking/Escort.Booking.API"
RUN dotnet restore "Escort.Booking.API.csproj"

RUN dotnet build "Escort.Booking.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "Escort.Booking.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Escort.Booking.API.dll"]
CMD ["dotnet", "Escort.Booking.API.dll"]

