FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER root
WORKDIR /app
EXPOSE 8085

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["/src/services/payment/Escort.Payment.API/Escort.Payment.API.csproj", "Escort.Payment.API/"]

COPY /src/services/payment/Escort.Payment.API/. Escort.Payment.API/

RUN dotnet restore "Escort.Payment.API/Escort.Payment.API.csproj"
WORKDIR "/src/Escort.Payment.API"
RUN dotnet build "Escort.Payment.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "Escort.Payment.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Escort.Payment.API.dll"]
CMD ["dotnet", "Escort.Payment.API.dll"]

