FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER root
WORKDIR /app
EXPOSE 8086

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["/src/services/safety/Escort.Safety.API/Escort.Safety.API.csproj", "Escort.Safety.API/"]

COPY /src/services/safety/Escort.Safety.API/. Escort.Safety.API/

RUN dotnet restore "Escort.Safety.API/Escort.Safety.API.csproj"
WORKDIR "/src/Escort.Safety.API"
RUN dotnet build "Escort.Safety.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "Escort.Safety.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Escort.Safety.API.dll"]
CMD ["dotnet", "Escort.Safety.API.dll"]

